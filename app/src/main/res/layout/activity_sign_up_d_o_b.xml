<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpDOBActivity"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@drawable/splash_back">

    <include
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        layout="@layout/view_header_back_title"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/header_back"
            android:alpha="0.7"
            android:visibility="gone"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_60sdp"
                android:paddingRight="@dimen/_60sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:layout_gravity="top"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingLeft="@dimen/_50sdp"
                    android:paddingRight="@dimen/_50sdp"
                    android:src="@drawable/logo"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_gravity="center_horizontal"
                    android:text="WELCOME"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_17ssp"
                    android:fontFamily="@font/roboto_medium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="Please enter your \ndate of birth"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_17ssp"
                    android:fontFamily="@font/roboto_medium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_gravity="center_horizontal"
                    android:text="You must be 21 to use"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_17ssp"
                    android:fontFamily="@font/roboto_medium"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Maybe Drinks?"
                    android:textColor="@color/highlighted_color"
                    android:textSize="@dimen/_17ssp"
                    android:fontFamily="@font/roboto_medium"/>

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/daySpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:spinnerMode="dropdown"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15ssp"
                    android:fontFamily="@font/roboto"
                    android:minHeight="@dimen/_50sdp"
                    android:background="@drawable/spinner_date"/>
                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/monthSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:spinnerMode="dropdown"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15ssp"
                    android:fontFamily="@font/roboto"
                    android:minHeight="@dimen/_50sdp"
                    android:background="@drawable/spinner_date"/>
                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/yearSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:spinnerMode="dropdown"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15ssp"
                    android:fontFamily="@font/roboto"
                    android:minHeight="@dimen/_50sdp"
                    android:background="@drawable/spinner_date"/>





                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:layout_gravity="center_horizontal"
                    android:paddingLeft="35dp"
                    android:paddingRight="35dp"
                    android:text="Continue"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:textAllCaps="false"
                    android:background="@drawable/button_back"
                    android:fontFamily="@font/roboto"
                    android:onClick="continueClick"/>
            </LinearLayout>
        </ScrollView>


    </FrameLayout>

</LinearLayout>