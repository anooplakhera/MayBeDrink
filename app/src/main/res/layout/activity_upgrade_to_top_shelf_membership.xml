<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpgradeToTopShelfMembershipActivity"
    android:background="@drawable/thanks_back">

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        layout="@layout/view_header_back_title"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingRight="@dimen/_20sdp"
        android:orientation="vertical"
        android:clickable="true"
        android:onClick="continueClick">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180sdp"
            android:layout_marginTop="@dimen/_70sdp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/box_back1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_25sdp"
                android:gravity="center"
                android:text="View plans"
                android:textColor="@color/white"
                android:textSize="@dimen/_19ssp"
                android:fontFamily="@font/roboto_bold"/>
        </LinearLayout>
        <ImageView
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_140sdp"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/_40sdp"
            android:src="@drawable/credit_card_icon"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:background="@drawable/circle_header"/><!--@drawable/circle_header -->

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_50sdp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Skip"
        android:textColor="@color/white"
        android:textSize="@dimen/_17ssp"
        android:fontFamily="@font/roboto"
        android:onClick="skipClick"/>

</RelativeLayout>